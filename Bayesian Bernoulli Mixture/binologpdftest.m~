% TEST 1
x = zeros(100,2);
p1 = [0.001,0.99999];
p2 = [0.999,0.001];
for i = 1:50
    x(i,:) = binornd(1,p1);
    x(50+i,:) = binornd(1,p2);
end
samples = vanillaGibbsBernoulliMixture(x,2,2000,5000,5);

